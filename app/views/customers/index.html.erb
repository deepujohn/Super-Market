<h2>Customers</h2>
<%= link_to 'New', new_customer_path %>
<table>
    <tr>
		<th>Name</th>
		<th>Email</th>
		<th>City</th>
		<th>Country</th>
		<th>Phone Number</th>
		<th colspan="3"></th>
	</tr>
	<% @customers.each do |customer| %>
		<tr>
			<td><%= customer.name %></td>
			<td><%= customer.email %></td>
			<td><%= customer.city.name %></td>
			<td><%= customer.country %></td>
			<td><%= customer.phone_number %></td>
			<td><%= link_to 'Show',customer_path(customer) %> |</td>
			<td><%= link_to 'Edit',edit_customer_path(customer) %> | </td>
			<td><%= link_to 'Delete',customer_path(customer), method: :delete,data:{confirm: 'Are you sure?'} %></td>
		</tr>
	<% end %>
</table>